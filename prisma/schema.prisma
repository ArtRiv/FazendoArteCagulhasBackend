generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  name  String
  email String @unique
}

model Product {
  category       Category @relation(fields: [category_id], references: [id])
  category_id    Int
  created_at     Int
  description    String[] @default([])
  id             String   @id
  link           String
  media          String[] @default([])
  price          Float
  product_group  String
  purchase_count Int
  rating         Int      @default(0)
  review         Review[]
  tag            String
  title          String
}

model Review {
  created_at Int
  from       String
  id         String   @id
  media      String[] @default([])
  product    Product? @relation(fields: [product_id], references: [id])
  product_id String
  rating     Int
  text       String
  title      String
  user       String
}

model Category {
  id       Int       @id
  name     String
  products Product[]
}